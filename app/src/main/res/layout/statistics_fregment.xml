<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.dqsoftwaresolutions.feedMyRead.Statistics">
    <TextView
        android:id="@+id/statistics_head_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingBottom="15dp"

        android:text="@string/my_statistics"
        android:textColor="@color/deep_green"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/saved_articles_view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/statistics_head_line"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:id="@+id/saved_articles_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statistics_head_line"
        android:layout_marginBottom="30dp">

        <ImageView
            android:contentDescription="@string/number_of_saved_articles"
            android:id="@+id/saved_articles"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:src="@drawable/articledarkicon"/>
        <TextView
            android:id="@+id/articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saved_articles"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:text="@string/number_of_saved_articles"
            android:textColor="@color/deep_green"
            android:textSize="16sp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">
            <TextView
                android:gravity="center|end"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:id="@+id/articles_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/upperTab_bar_underline"
                android:textSize="40sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/saved_tag_view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/saved_articles_relativeLayout"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:id="@+id/saved_tag_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saved_tag_view"
        android:layout_marginBottom="20dp">
        <ImageView
            android:contentDescription="@string/number_of_tags"
            android:id="@+id/saved_tag_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:src="@drawable/tag_dark_green"/>
        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saved_tag_image"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:text="@string/number_of_tags"
            android:textColor="@color/deep_green"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tags_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:text=""
                android:textColor="@color/upperTab_bar_underline"
                android:textSize="40sp"
                android:textStyle="bold"/>
            </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/saved_favorite_view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/saved_tag_relativeLayout"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:id="@+id/saved_favorite_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saved_favorite_view"
        android:layout_marginBottom="30dp">
        <ImageView
            android:contentDescription="@string/favorite_image"
            android:id="@+id/saved_favorite_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:src="@drawable/star_dark_green"/>

        <TextView
            android:id="@+id/articles_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saved_favorite_image"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="@string/number_of_articles_tag_as_favorites"
            android:textColor="@color/deep_green"
            android:textSize="16sp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">
            <TextView
                android:id="@+id/articles_favorites_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|end"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:text=""
                android:textColor="@color/upperTab_bar_underline"
                android:textSize="40sp"
                android:textStyle="bold"/>

            </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/saved_archive_view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/saved_favorite_relativeLayout"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:id="@+id/saved_archive_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saved_archive_view">

        <ImageView
            android:contentDescription="@string/archive"
            android:id="@+id/saved_archive_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:src="@drawable/arcive_deep_green"/>

        <TextView
            android:id="@+id/articles_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saved_archive_image"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="@string/number_of_articles_in_archive"
            android:textColor="@color/deep_green"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">
            <TextView
                android:id="@+id/articles_archive_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"

                android:gravity="center|end"
                android:text=""
                android:textColor="@color/upperTab_bar_underline"
                android:textSize="40sp"
                android:textStyle="bold"/>
            </LinearLayout>

    </RelativeLayout>


